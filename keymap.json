// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // Standard macOS bindings
  {
    "use_key_equivalents": true,
    "bindings": {
      "cmd-=": ["zed::IncreaseBufferFontSize", { "persist": false }],
      "cmd-+": ["zed::IncreaseBufferFontSize", { "persist": false }],
      "cmd--": ["zed::DecreaseBufferFontSize", { "persist": false }],
      "cmd-r": ["task::Spawn", { "task_name": "Ruff check" }],
      "cmd-b": ["task::Spawn", { "task_name": "Basedpyright check" }],
      "cmd-shift-r": ["task::Spawn", { "task_name": "Run python file" }],
      "cmd-1": "workspace::ToggleLeftDock",
      "cmd-2": "workspace::ToggleBottomDock",
      "cmd-3": "workspace::ToggleRightDock",
      "cmd-4": "git_panel::ToggleFocus"
    }
  },

  // Workspace context
  {
    "context": "Workspace",
    "bindings": {
      "cmd-5": null,
      "cmd-6": null,
      // "cmd-7": null,
      "cmd-8": null,
      "cmd-9": null,
      "cmd-b": null,
      "cmd-j": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "cmd-e": "project_panel::ToggleFocus",
      "ctrl-enter": "editor::GoToDefinition",
      "cmd-t": ["workspace::SendKeystrokes", "cmd-7"],
      "cmd-]": "window::ShowNextWindowTab",
      "cmd-[": "window::ShowPreviousWindowTab"
    }
  },
  {
    "context": "ContextEditor > Editor",
    "bindings": {
      "ctrl-enter": "assistant::Assist",
      "enter": "assistant::ConfirmCommand",
      "alt-enter": "editor::Newline"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-N": "project_panel::NewDirectory",
      "X": "project_panel::Open",
      "space": "project_panel::ToggleFocus",
      "enter": ["workspace::SendKeystrokes", "X space"]
    }
  },
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "ctrl-enter": "git::Commit"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-enter": "git::Commit"
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "cmd-enter": null
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "cmd-enter": null
    }
  },
  {
    "context": "CommitEditor > Editor",
    "bindings": {
      "ctrl-enter": "git::Commit"
    }
  },
  {
    "context": "(Workspace || Editor)",
    "bindings": {
      "cmd-k": "git::Commit"
    }
  },
  {
    "context": "CommitEditor > Editor",
    "bindings": {
      "cmd-enter": null
    }
  },
  {
    "context": "GitDiff > Editor",
    "bindings": {
      "cmd-enter": null
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "cmd-k": "git::GenerateCommitMessage"
    }
  },
  {
    "bindings": {
      "cmd-7": "editor::RestartLanguageServer"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "cmd-7": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-7": null
    }
  },
  {
    "context": "OutlinePanel",
    "bindings": {
      "cmd-7": null
    }
  }
]
