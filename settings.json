// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "play_sound_when_agent_done": true,
    "button": false,
    "default_profile": "write",
    "always_allow_tool_actions": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "autosave": "on_focus_change",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "icon_theme": "Catppuccin Mocha",
  "base_keymap": "JetBrains",
  "buffer_line_height": "comfortable",
  "ui_font_family": "JetBrains Mono NL",
  "buffer_font_family": "JetBrains Mono NL",
  "ui_font_size": 25,
  // "ui_font_size": 30,
  "buffer_font_size": 25,
  // "buffer_font_size": 30,
  "agent_font_size": 25,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Latte"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.ruff_cache",
    "**/.ropeproject",
    "**/.venv",
    "**/venv",
    "**/__pycache__"
  ],
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff", "!pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "external": {
            "command": "ruff",
            "arguments": ["format", "-"]
          }
        },
        {
          "code_actions": {
            // Fix all auto-fixable lint violations
            "source.fixAll.ruff": true,
            // Organize imports
            "source.organizeImports.ruff": true
          }
        }
      ]
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace" // анализировать весь проект
        },
        "python": {
          "pythonPath": ".venv/bin/python" // путь к интерпретатору в виртуальной среде
        }
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "/Users/lovebloodanddiamonds/go/bin/golangci-lint",
          "run",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    }
  },
  "scrollbar": {
    "diagnostics": "information"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "button": true
  },
  "max_tabs": 5,
  "debugger": {
    "stepping_granularity": "line",
    "save_breakpoints": true,
    "dock": "bottom",
    "button": false
  }
}

