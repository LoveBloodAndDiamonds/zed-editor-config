// Static tasks configuration.
[
  {
    "label": "Ruff check",
    "command": "ruff check .",
    "reveal_target": "dock"
  },
  {
    "label": "Ruff format",
    "command": "ruff format .",
    "reveal_target": "dock"
  },
  {
    "label": "Basedpyright check",
    "command": "basedpyright src",
    "reveal_target": "dock"
  },
  {
    "label": "Run python file",
    "command": "uv run python3",
    "args": ["$ZED_FILE"],
    "use_new_terminal": true,
    "env": {
      "PYTHONPATH": "."
    }
  }
]
